{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "composite": true
  },
  "references": [
    { "path": "../json-schema-to-react-tree" },
    { "path": "../inspector" },
    { "path": "../logs-react" },
    { "path": "../monaco-editor-react" },
    { "path": "../docs-react" }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.json",
    "src/**/*.css",
    "src/**/*.scss",
  ]
}
