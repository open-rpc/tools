{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "@open-rpc/json-schema-to-react-tree": ["../json-schema-to-react-tree/dist"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.css"]
}
