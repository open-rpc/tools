{
  "name": "tools",
  "version": "1.0.0",
  "description": "mono repo for open-rpc tooling",
  "main": "jest.config.js",
  "scripts": {
    "build": "turbo run build",
    "clean:package": "turbo run clean:package --filter=@open-rpc/monaco-editor-react --filter=@open-rpc/docs-react --filter=@open-rpc/inspector --filter=@open-rpc/playground",
    "build:package": "turbo run build:package --filter=@open-rpc/monaco-editor-react --filter=@open-rpc/docs-react --filter=@open-rpc/inspector --filter=@open-rpc/playground",
    "build:packages": "npm run build:monaco-editor-react && npm run build:json-schema-to-react-tree && npm run build:logs-react && npm run build:docs-react && npm run build:inspector && npm run build:playground",
    "build:monaco-editor-react": "turbo run build:package --filter=@open-rpc/monaco-editor-react",
    "build:json-schema-to-react-tree": "turbo run build:package --filter=@open-rpc/json-schema-to-react-tree",
    "build:logs-react": "turbo run build:package --filter=@open-rpc/logs-react",
    "build:docs-react": "turbo run build:package --filter=@open-rpc/docs-react",
    "build:inspector": "turbo run build:package --filter=@open-rpc/inspector",
    "build:playground": "turbo run build:package --filter=@open-rpc/playground",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "watch": "turbo run build test --watch",
    "dev": "turbo run build start --watch",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "29.7.0",
    "prettier": "^2.0.0",
    "turbo": "^1.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.20.5"
  },
  "overrides": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
